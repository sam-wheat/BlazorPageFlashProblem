@page "/counter/{currentCount}"
<PageTitle>Counter</PageTitle>

<div style="width:80vw;height:90vh;background-color:black;color:white">
    

    <h1>Counter</h1>

    <p role="status">Current count: @currentCount</p>

    <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
</div>
@code {
    [Parameter] public string currentCount { get; set; }
    [Inject] protected NavigationManager NavigationManager { get; set; }
    private void IncrementCount()
    {
        currentCount = (Convert.ToInt32(currentCount) + 1).ToString();
        NavigationManager.NavigateTo($"/counter/{currentCount}", true);
        //NavigationManager.NavigateTo($"/counter/{currentCount}", false);
    }
}
